case $1 in
    'ligar')
        exec ./login-server_sql &
        exec ./char-server_sql &
        exec ./map-server_sql &
        exec ./login-server &
        exec ./char-server &
        exec ./map-server &
;;
    'desligar')
        ps ax | grep -E "login-server_sql|char-server_sql|map-server_sql|login-server|char-server|map-server" | awk '{print $1}' | xargs kill
;;
    'reiniciar')
        $0 desligar
        $0 ligar
;;
    *)
        echo "Comandos: ligar | desligar | reiniciar"
;;
esac
